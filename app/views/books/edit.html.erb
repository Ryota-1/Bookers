<h1>Editing Book</h1>
<%= form_for(@book) do |f| %>
  <% if @book.errors.any? %>
        <div class="errormessage">
          <h3><%= @book.errors.count %> errors prohibited this book from being saved:</h3>
          <% @book.errors.full_messages.each do |message| %>
              <li><%= message %></li>
          <% end %>
        </div>
  <% end %>
    <h4>Title</h4>
    <%= f.text_field :title %>
    <h4>Body</h4>
    <%= f.text_area :body %>
    <br><%= f.submit 'Update Book' %>
<% end %>

<td><%= link_to "Show", book_path(@book.id) %><td>
|
<a href = "/books">Back</a>